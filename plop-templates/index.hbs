<template>
    <div class="index-lists">
        <el-card class="border-none!" shadow="never">
            <el-form ref="formRef" class="-mb-4" :model="queryParams" :inline="true">
                <!-- 这里插入查询表单字段渲染模板 -->
                <!-- Plop 可扩展组件填充此处 -->
                <el-form-item>
                    <el-button type="primary" @click="resetPage">\{{ $t('search') }}</el-button>
                    <el-button @click="resetParams">\{{ $t('reset') }}</el-button>
                </el-form-item>
            </el-form>
        </el-card>

        <el-card class="border-none! mt-4" shadow="never">
            <div>
                <el-button v-perms="['{{moduleName}}.create']" type="primary" @click="handleAdd()">
                    <template #icon>
                        <icon name="el-icon-Plus" />
                    </template>
                    \{{ $t('new') }}
                </el-button>
            </div>

            <el-table class="mt-4" size="large" v-loading="pager.loading" :data="pager.lists">
                <!-- Plop 可扩展组件填充列表字段 -->
                <el-table-column label="操作" width="120" fixed="right">
                    <template #default="{ row }">
                        <div class="flex">
                            <!-- 编辑 -->
                            <icon-button
                                @click="handleEdit(row)"
                                name="local-icon-edit"
                                :content="$t('edit')"
                            />
                            <!-- 删除 -->
                            <icon-button
                                class="ml-3"
                                @click="handleDelete(row.id)"
                                color="var(--el-color-danger)"
                                name="local-icon-delete"
                                :content="$t('action.delete')"
                            />
                        </div>
                    </template>
                </el-table-column>
            </el-table>

            <div class="flex justify-end mt-4">
                <pagination v-model="pager" @change="getTableData" />
            </div>
        </el-card>

        <edit-popup v-if="showEdit" ref="editRef" @success="getTableData" @close="showEdit = false" />
    </div>
</template>

<script lang="ts" setup name="{{moduleName}}">
import { {{moduleName}}Delete, {{moduleName}}Lists } from '@/api/{{moduleName}}'
import { usePaging } from '@/hooks/usePaging'
import { t } from '@/i18n'
import feedback from '@/utils/feedback'

import EditPopup from './edit.vue'

const editRef = shallowRef<InstanceType<typeof EditPopup>>()
const showEdit = ref(false)
const queryParams = reactive({})

const { pager, getTableData, resetPage, resetParams } = usePaging({
    fetchFun: {{moduleName}}Lists,
    params: queryParams
})

const handleAdd = async () => {
    showEdit.value = true
    await nextTick()
    editRef.value?.open('add')
}

const handleEdit = async (data: any) => {
    showEdit.value = true
    await nextTick()
    editRef.value?.open('edit')
    editRef.value?.getDetail(data)
}

const handleDelete = async ({{primaryKey}}: number) => {
    await feedback.confirm('确定要删除？')
    await {{moduleName}}Delete({{primaryKey}})
    feedback.msgSuccess('删除成功')
    getTableData()
}

getTableData()
</script>
